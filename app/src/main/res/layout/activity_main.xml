<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDE4F2"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program Activity"
        android:textSize="30sp"
        android:textColor="#1C1C1E"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtonActivityLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4B8DA"
        android:text="Activity Login"/>

    <Button
        android:id="@+id/ButtonProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEA1CD"
        android:text="Activity Profile"/>

    <Button
        android:id="@+id/ButtonKeluar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E68BBE"
        android:text="Keluar APP"/>


</LinearLayout>